{
  "require": {
    "php": ">=5.5.0",
    "twig/twig": "^1.23",
    "slim/php-view": "^2.0",
    "slim/slim": "^3.1",
    "slim/twig-view": "^2.1",
    "twig/extensions": "^1.3",
    "illuminate/database": "*",
    "tetreum/perfect-print": "dev-master",
    "illuminate/pagination": "^5.2"
  },
  "require-dev": {
    "sensiolabs/security-checker": "^3.0"
  },
  "autoload": {
    "psr-4": {"App\\": "App"}
  },
  "scripts": {
    "post-install-cmd": [
      "php vendor/bin/security-checker security:check --format=simple &> /dev/null"
    ],
    "post-update-cmd": [
      "php vendor/bin/security-checker security:check --format=simple &> /dev/null"
    ]
  }
}
